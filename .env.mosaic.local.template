# Query Server (Mosaic) - Local Configuration Overrides
# This file overrides settings from .env.shared for the query server

# Service-specific settings
SERVICE_NAME=mosaic
DEBUG=true
ENVIRONMENT=development

# Query server configuration
SERVER_PORT=8000
LOG_LEVEL=INFO

# MCP and FastMCP specific settings
MCP_OAUTH_ENABLED=true
MCP_OAUTH_PROVIDER=entra_id

# Real-time query optimizations
OAUTH_ENABLED=true
AZURE_USE_MANAGED_IDENTITY=true

# Override shared settings as needed for development
# AZURE_OPENAI_ENDPOINT=your-dev-endpoint
# AZURE_COSMOS_ENDPOINT=your-dev-cosmos-endpoint

# Query service specific environment variables
QUERY_TIMEOUT_SECONDS=30
QUERY_MAX_RESULTS=100
VECTOR_SEARCH_LIMIT=50