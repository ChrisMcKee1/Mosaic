{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "LS",
      "Glob",
      "Grep",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebSearch"
    ],
    "deny": []
  },
  "env": {
    "AZURE_SUBSCRIPTION_ID": "",
    "AZURE_RESOURCE_GROUP": "rg-mosaic-mcp-tool",
    "AZURE_LOCATION": "eastus",
    "AZURE_OPENAI_API_KEY": "",
    "AZURE_OPENAI_ENDPOINT": "",
    "AZURE_SEARCH_SERVICE_NAME": "",
    "AZURE_SEARCH_API_KEY": "",
    "AZURE_COSMOS_DB_CONNECTION_STRING": "",
    "AZURE_REDIS_CONNECTION_STRING": "",
    "AZURE_ML_ENDPOINT_URL": "",
    "AZURE_ML_API_KEY": "",
    "AZURE_FUNCTION_APP_NAME": "",
    "MOSAIC_ENVIRONMENT": "development"
  },
  "cleanupPeriodDays": 30,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Code modification detected - ensuring compliance with Mosaic MCP Tool requirements'"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Bash execution - prioritizing azd and az CLI commands'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Code modification completed - verify Semantic Kernel plugin patterns'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Task completed - ensure all FR requirements are met'"
          }
        ]
      }
    ]
  },
  "apiKeyHelper": {
    "azure": {
      "command": "az account get-access-token --query accessToken --output tsv",
      "description": "Get Azure access token for authentication"
    }
  }
}