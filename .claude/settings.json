{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "LS",
      "Glob",
      "Grep",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebSearch"
    ],
    "deny": []
  },
  "env": {
    "AZURE_RESOURCE_GROUP": "rg-mosaic-dev",
    "AZURE_LOCATION": "eastus2",
    "AZURE_ENV_NAME": "mosaic-dev",
    "AZURE_OPENAI_SERVICE_NAME": "mosaic-openai-mosaic-dev",
    "AZURE_SEARCH_SERVICE_NAME": "mosaic-search-mosaic-dev",
    "AZURE_COSMOS_DB_ACCOUNT_NAME": "mosaic-cosmos-mosaic-dev",
    "AZURE_REDIS_CACHE_NAME": "mosaic-redis-mosaic-dev",
    "AZURE_ML_WORKSPACE_NAME": "mosaic-ml-mosaic-dev",
    "MOSAIC_ENVIRONMENT": "development"
  },
  "cleanupPeriodDays": 30,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Code modification detected - ensuring compliance with Mosaic MCP Tool requirements'"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Bash execution - prioritizing azd and az CLI commands'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Code modification completed - verify Semantic Kernel plugin patterns'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Task completed - ensure all FR requirements are met'"
          }
        ]
      }
    ]
  }
}