# Mosaic MCP Tool Environment Variables
# Copy this file to .env and update with your Azure resource endpoints
# All services use managed identity authentication - no API keys needed

# Azure OpenAI Service (Semantic Kernel standard environment variables)
AZURE_OPENAI_ENDPOINT=https://your-openai-service.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_TEXT_EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002

# Azure Cosmos DB (OmniRAG unified backend)
AZURE_COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/

# Azure Cache for Redis
AZURE_REDIS_ENDPOINT=your-redis-cache.redis.cache.windows.net

# Azure Machine Learning (Cross-encoder model)
AZURE_ML_ENDPOINT_URL=https://your-ml-endpoint.region.inference.ml.azure.com/score

# OAuth 2.1 Authentication (Microsoft Entra ID)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false

# Optional: Override default database/container names
# AZURE_COSMOS_DATABASE_NAME=mosaic
# AZURE_COSMOS_CONTAINER_NAME=knowledge
# AZURE_COSMOS_MEMORY_CONTAINER=memory