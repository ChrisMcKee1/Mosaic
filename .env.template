# Mosaic MCP Tool Environment Configuration Template
# Copy this file to .env and configure for your environment

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false

# OAuth 2.1 Authentication (Production Azure Environment)
OAUTH_ENABLED=true
AZURE_TENANT_ID=your-azure-tenant-id-here
AZURE_CLIENT_ID=your-azure-client-id-here
AZURE_CLIENT_SECRET=your-azure-client-secret-here

# Azure OpenAI Service Configuration (Managed Identity in Production)
AZURE_OPENAI_ENDPOINT=https://your-openai-service.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_TEXT_EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002

# Azure Cosmos DB Configuration (Managed Identity in Production)
AZURE_COSMOS_DB_ENDPOINT=https://your-cosmos-db.documents.azure.com:443/

# Azure Cache for Redis Configuration (Managed Identity in Production)
AZURE_REDIS_ENDPOINT=your-redis-cache.redis.cache.windows.net

# Azure Machine Learning Configuration (Cross-encoder model)
AZURE_ML_ENDPOINT_URL=https://your-ml-endpoint.westus2.inference.ml.azure.com/score

# Git Authentication (Optional - for repository ingestion)
GITHUB_TOKEN=your-github-token-here
GIT_USERNAME=your-git-username
GIT_PASSWORD=your-git-password

# Local Development Overrides (Leave blank for production)
# These are only used for local development with Azure Cosmos DB Emulator
COSMOS_EMULATOR_ENDPOINT=
REDIS_LOCAL_ENDPOINT=